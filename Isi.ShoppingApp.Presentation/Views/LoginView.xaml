<Window x:Class="Isi.ShoppingApp.Presentation.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Isi.ShoppingApp.Presentation.Views"
        mc:Ignorable="d" Width="240" Height="250">
    
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="120"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="120"/>
        </Style>


        <Style TargetType="Button">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Background" Value="WhiteSmoke"/>

        </Style>
    </Window.Resources>


    <Border BorderThickness="1"
            BorderBrush="Orange"
            Margin="5">
        <StackPanel Margin="10">

            <Label Content="Login" HorizontalContentAlignment="Center"
               FontWeight="Bold"
               FontSize="14"
               Padding="10"/>

            <DockPanel>
                <Label Content="Username"/>
                <TextBox x:Name="usernameTextBox" Text="{Binding Path=Username, UpdateSourceTrigger=PropertyChanged}"/>
            </DockPanel>

            <DockPanel>
                <Label Content="Password "/>
                <PasswordBox x:Name="passwordBox"
                             PasswordChanged="passwordBox_PasswordChanged"/>
            </DockPanel>

            <DockPanel Margin="5">
                <Button Content="Log in"
                    Command="{Binding Path=LoginCommand}"/>
            </DockPanel>

            <DockPanel>
                <Label Content="New user?" VerticalContentAlignment="Center" 
               Width="92"
               HorizontalContentAlignment="Right"
               FontSize="9"
               Foreground="DarkGray"/>
                <Button Name="signUpButton"
                    Content="Sign up"
                    BorderBrush="Transparent"
                    Background="Transparent"
                    HorizontalAlignment="Left"
                    FontSize="9"
                    Width="45"
                    Foreground="Orange"
                    Height="20"/>
            </DockPanel>
        </StackPanel>
    </Border>
</Window>
